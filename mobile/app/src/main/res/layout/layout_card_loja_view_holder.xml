<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    app:layout_constraintTop_toTopOf="parent"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gifts Cards"
            android:textSize="33sp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageLoja"
            android:layout_width="130dp"
            android:layout_height="130dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/titleLoja"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/jogo"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/imageLoja"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/botao_inicial"
            android:text="Foto"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>