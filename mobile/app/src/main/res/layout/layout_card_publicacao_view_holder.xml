<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    app:layout_constraintTop_toTopOf="parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/fotoUsuario"
            android:layout_width="160dp"
            android:layout_height="150dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="10dp"
            android:src="@drawable/jogo"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/nameUser"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_weight="1"
            android:text="chocolate"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/fotoUsuario"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:text="01/10/2020"
            app:layout_constraintLeft_toRightOf="@+id/nameUser"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="220dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/nameUser"
            android:text="Essa é sua publicaçâo sobre o tal do mario bros "
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/fotoUsuario"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center_horizontal"/>

        <CheckBox
            android:id="@+id/nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fotoUsuario"
            tools:ignore="MissingConstraints"
            android:text="Like"
            android:layout_marginLeft="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:scaleX="2"
            android:scaleY="2"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/nota">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColorHint="@color/white"
                app:layout_constraintTop_toBottomOf="@id/nota">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite seu Comentario"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="enviar"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_marginRight="16dp"
                />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>